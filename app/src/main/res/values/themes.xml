<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VPNThunderShield" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">#f2f2f7</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="iconColor">@color/black</item>
        <item name="titleColor">@color/black</item>
        <item name="subtitleColor">@color/black80</item>
        <item name="textColor">@color/black</item>
        <item name="bgColor">#f2f2f7</item>
        <item name="cardBgColor">@color/white</item>

        <item name="dialogBgColor">@color/white</item>
        <item name="dialogTitleColor">#333333</item>
        <item name="dialogSubtitleColor">#333333</item>
        <item name="dialogTextColor">#333333</item>

    </style>

    <style name="Theme.App.starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_app</item>
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="postSplashScreenTheme">@style/Theme.VPNThunderShield</item>
    </style>

</resources>