<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="vm"
            type="com.newagedevs.smartvpn.view.ui.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/bgColor"
        android:gravity="center_horizontal"
        tools:context=".view.ui.AboutActivity">

        <com.hjq.bar.TitleBar
            android:id="@+id/tb_main_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:statusBarColor"
            app:title="About Smart VPN"
            app:leftIcon="@drawable/ic_left_2"
            app:rightIcon="@drawable/ic_info"
            app:leftIconTint="?attr/iconColor"
            app:rightIconTint="?attr/iconColor"
            app:titleColor="?attr/titleColor"
            app:lineVisible="false"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <LinearLayout
                    style="@style/SelectedCountryLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/ripple_background"
                    android:gravity="center"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:gravity="center"
                        android:text="@string/app_description" />

                </LinearLayout>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_marginVertical="@dimen/dp_5"
                    android:padding="@dimen/dp_15"
                    android:background="@drawable/ripple_background"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="onSourceCodeClicked"
                    android:focusable="true"
                    android:textColor="?attr/titleColor"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/source_code" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_marginVertical="@dimen/dp_5"
                    android:padding="@dimen/dp_15"
                    android:background="@drawable/ripple_background"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="onSourceCodeClicked"
                    android:focusable="true"
                    android:textColor="?attr/titleColor"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/other_app" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:layout_marginVertical="@dimen/dp_5"
                    android:padding="@dimen/dp_15"
                    android:background="@drawable/ripple_background"
                    android:gravity="center"
                    android:clickable="true"
                    android:onClick="onSourceCodeClicked"
                    android:focusable="true"
                    android:textColor="?attr/titleColor"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:text="@string/privacy_policy" />

            </LinearLayout>
        </ScrollView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/dp_20"
            android:text="@string/copyright_2023_8211_2024"
            android:textColor="#BDBDBD" />

    </LinearLayout>
</layout>