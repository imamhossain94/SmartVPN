<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="vm"
            type="com.newagedevs.smartvpn.view.ui.MainViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="?attr/bgColor"
        tools:context=".view.ui.AboutActivity">

        <com.hjq.bar.TitleBar
            android:id="@+id/tb_main_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:statusBarColor"
            app:title="Network Information"
            app:leftIcon="@drawable/ic_left_2"
            app:rightIcon="@drawable/ic_info"
            app:leftIconTint="?attr/iconColor"
            app:rightIconTint="?attr/iconColor"
            app:titleColor="?attr/titleColor"
            app:lineVisible="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.newagedevs.smartvpn.view.SettingBar
                android:id="@+id/ip_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="IP Address"
                tools:bar_rightText="127.0.0.1" />

            <com.newagedevs.smartvpn.view.SettingBar
                android:id="@+id/internet_provider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="Internet Provider"
                tools:bar_rightText="" />

            <com.newagedevs.smartvpn.view.SettingBar
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="Location"
                tools:bar_rightText="" />

            <com.newagedevs.smartvpn.view.SettingBar
                android:id="@+id/postal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="Postal Code"
                tools:bar_rightText="" />

            <com.newagedevs.smartvpn.view.SettingBar
                android:id="@+id/timezone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:bar_leftText="Timezone"
                tools:bar_rightText="" />

        </LinearLayout>

    </LinearLayout>
</layout>